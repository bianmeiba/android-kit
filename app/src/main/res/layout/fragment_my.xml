<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_my_profile"
            style="@style/item_container_horizontal"
            android:layout_marginTop="@dimen/space_20"
            android:padding="@dimen/space_20">

            <ImageView
                android:id="@+id/iv_my_avatars"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张仲景"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/text_size_18"/>

                <TextView
                    android:id="@+id/tv_my_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_2"
                    android:singleLine="true"
                    android:text="级别：专家"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:contentDescription="@null"
                android:src="@drawable/ic_item_goto_right_tip"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color"/>

        <LinearLayout
            android:id="@+id/ll_my_homepage"
            style="@style/item_container_horizontal"
            android:padding="@dimen/space_16">

            <TextView
                style="@style/item_text"
                android:text="我的主页"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                android:contentDescription="@null"
                android:src="@drawable/ic_item_goto_right_tip"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color"/>

        <LinearLayout
            android:id="@+id/ll_my_clinic"
            style="@style/item_container_horizontal"
            android:padding="@dimen/space_16">

            <TextView
                style="@style/item_text"
                android:text="我的门诊"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                android:contentDescription="@null"
                android:src="@drawable/ic_item_goto_right_tip"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color"/>

        <LinearLayout
            android:id="@+id/ll_my_expert"
            style="@style/item_container_horizontal"
            android:padding="@dimen/space_16">

            <TextView
                style="@style/item_text"
                android:text="我的专家"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                android:contentDescription="@null"
                android:src="@drawable/ic_item_goto_right_tip"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color"/>

        <LinearLayout
            android:id="@+id/ll_my_collection"
            style="@style/item_container_horizontal"
            android:padding="@dimen/space_16">

            <TextView
                style="@style/item_text"
                android:text="我的收藏"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/ic_item_goto_right_tip"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color"/>

        <LinearLayout
            android:id="@+id/ll_my_learn_history"
            style="@style/item_container_horizontal"
            android:padding="@dimen/space_16">

            <TextView
                style="@style/item_text"
                android:text="学习记录"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/ic_item_goto_right_tip"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color"/>

        <LinearLayout
            android:id="@+id/ll_settings"
            style="@style/item_container_horizontal"
            android:padding="@dimen/space_16">

            <TextView
                style="@style/item_text"
                android:text="设置"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/ic_item_goto_right_tip"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>